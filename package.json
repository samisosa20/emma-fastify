{
  "name": "fiona-node-api-ts",
  "description": "Simple api sample in Node",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "migrate": "prisma db pull",
    "prisma": "prisma generate",
    "start": "node -r tsconfig-paths/register dist/src/index.js",
    "deploy:prod": "npm run prisma && npm run build && pm2 describe fiona-backend > /dev/null && pm2 restart fiona-backend || pm2 start --name fiona-backend --watch --node-args='-r tsconfig-paths/register' dist/src/index.js && pm2 save"
  },
  "author": "Sammy Guttman",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "9.5.2",
    "@fastify/swagger-ui": "5.2.3",
    "@prisma/client": "6.17.0",
    "bcryptjs": "^3.0.2",
    "express": "5.1.0",
    "fastify": "5.6.1",
    "mysql2": "3.15.1",
    "node-cron": "^4.2.1",
    "nodemailer": "7.0.9",
    "prisma-extension-pagination": "^0.7.5",
    "swagger-themes": "^1.4.3",
    "tsconfig-paths": "^4.2.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@types/node": "24.7.0",
    "@types/nodemailer": "7.0.2",
    "nodemon": "^3.1.0",
    "pm2": "6.0.13",
    "prisma": "6.17.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "5.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "packages"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "engines": {
    "node": ">=23.0.0"
  }
}
